{

    "layer": "top",
    "height": 28,
    "modules-left": ["sway/workspaces", "sway/mode", "sway/window"],
    "modules-center": ["clock" ],
    "modules-right": ["custom/controller-battery", "custom/weather", "network", "cpu", "memory", "sway/language", "pulseaudio", "tray"],

	"custom/controller-battery": {
		"format": "<span size=\"larger\">üéÆ {}%</span>",
		"interval": 60,
		"exec": "$HOME/.local/bin/controller-battery.sh"
	},

	"custom/weather": {
		"format": "<span size=\"larger\">{}</span>",
		"tooltip": true,
		"interval": 3600,
		"exec": "waybar-wttr.py",
		"return-type": "json"
	},

    "sway/workspaces": {
        "format": "<span size=\"larger\">{}</span>",
    },


    "sway/window": {
        "max-length": 90,
        "format": "<span size=\"larger\">{}</span>",
        "tooltip": false,
    },

    "clock": {
        "format": "<span size=\"larger\">{:%a, %d.%m.%y %H:%M}</span>",
		"tooltip-format": "<big>{:%Y %B}\n<tt>{calendar}</tt></big>",
        "on-click": "gsimplecal"
    },

    "network": {
        "interface": "enp3s0",
        "format": "<span size=\"larger\">‚Üì {bandwidthDownOctets} ‚Üë {bandwidthUpOctets}</span>",
        "format-disconnected": "disconnected", //An empty format will hide the module.
        "tooltip-format": "{ifname}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "tooltip-format-ethernet": "{ifname} ÔÉÅ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 200,
        "interval": 3,
        "on-click": "alacritty -e sudo nethogs"
    },

    "mpd": {
        "format": "<span size=\"larger\">{artist} - {title}</span>",
        "max-length": 40,
        "interval": 2,
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        }
    }, 

    "cpu": {
        "interval": 1,
        "max-length": 15,
        "format": "<span size=\"larger\">Ôãõ {usage}%</span>",
        "on-click": "alacritty -e htop --sort-key=PERCENT_CPU"
    },

    "memory": {
        "interval": 3,
        "max-length": 30,
        /*"format": "<span size=\"larger\">ÔÉâ {used:0.1f}GiB/{total:0.1f}GiB</span>",*/
        "format": "<span size=\"larger\">ÔÉâ {percentage}%</span>",
        "on-click": "alacritty -e htop --sort-key=PERCENT_MEM"
    },

    "pulseaudio": {
        "format": "<span size=\"larger\">{icon} {volume}%</span>",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },
        
    "tray": {
            "icon-size": 21,
            "spacing": 6
    },
    "sway/language": {
	"format": "<span size=\"larger\">ÔÑú {}</span>",
        "max-length": 50
    } ,
    "custom/mediaplayer": {
        "exec": "playerctl metadata --format \"{{ artist }} - {{ title }}\"",
        "format": "<span size=\"larger\">{}</span>",
        "interval": 1,
        "on-click": "alacritty -e ncmpcpp"
    },

    "wlr/taskbar": {
    }
    
}
